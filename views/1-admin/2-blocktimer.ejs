                                            <td><button type="button" class="availablebtn" data-day="Friday"
                                                    data-time="3:00-3:55"></button></td>
                                        </tr>
                                        <tr>
                                            <td class="time">4:00-4:50</td>
                                            <td><button type="button" class="availablebtn" data-day="Monday"
                                                    data-time="4:00-4:50"></button></td>
                                            <td><button type="button" class="availablebtn" data-day="Tuesday"
                                                    data-time="4:00-4:50"></button></td>
                                            <td><button type="button" class="availablebtn" data-day="Wednesday"
                                                    data-time="4:00-4:50"></button></td>
                                            <td><button type="button" class="availablebtn" data-day="Thursday"
                                                    data-time="4:00-4:50"></button></td>
                                            <td><button type="button" class="availablebtn" data-day="Friday"
                                                    data-time="4:00-4:50"></button></td>
