<%- include('../partials/header.ejs') %>
<body data-user-id="<%= user._id %>">
    <div class="page-container">
        <div class="content-wrap">
            <div class="container">
                <%- include('../partials/nav.ejs') %>

                <!-------------------- HEADER MENUS -------------------->   
                <%- include('../partials/menu.ejs') %>

                <!-------------------- CONTENTS START -------------------->
                <div class="chat-wrapper">
                    
                    <!-- Sidebar -->
                    <div class="chat-sidebar">
                        <h4><button id="open-new-chat" type="button">Start New Chat</button></h4>

                        <h2>Inbox</h2>
                        <% chats.forEach(chat => { %>
                            <div class="chat-room" data-id="<%= chat._id %>">
                                <% if (chat.isGroupChat) { %>
                                    <strong>[Group]</strong> <%= chat.groupName %>
                                <% } else { %>
                                    <%= chat.users.find(u => u._id.toString() !== user._id.toString())?.username %>
                                <% } %>
                            </div>
                        <% }) %>
                    </div>

                    <!-- Chat Area -->
                    <div class="chat-area">
                        <div id="messages" style="overflow-y: auto; height: 400px;">
                            <!-- Messages will be populated here dynamically -->
                        </div>

                        <!-- Message Form -->
                        <form id="message-form">
                            <input id="message-input" type="text" placeholder="Type your message..." />
                            <button type="submit">Send</button>
                        </form>
                    </div>
                </div>

                <!-- Start New Chat Modal -->
                <div id="new-chat-modal">
                        <h3>Start New Chat</h3>
                        <input type="text" id="user-search" placeholder="Search users..."/>

                        <select name="userIds" id="user-select" multiple>
                        <% users.forEach(u => { %>
                            <option value="<%= u._id %>"><%= u.username %> (<%= u.roles %>)</option>
                        <% }) %>
                        </select>
                        <form id="new-chat-form">
                            <input type="text" id="group-name" placeholder="Group Name (optional)" style="width:100%; margin-bottom:10px;" />
                            <select name="userIds" multiple required style="width:100%; height: 150px; margin-bottom:10px;">
                                <% users.forEach(u => { %>
                                    <option value="<%= u._id %>"><%= u.username %> (<%= u.roles %>)</option>
                                <% }) %>
                            </select>
                            <button type="submit">Start</button>
                        </form>
                        <button id="close-modal">Cancel</button>
                    </div>
                </div>

            </div>
        </div>

        <!-------------------- FOOTER -------------------->
        <%- include('../partials/footer.ejs') %>
        
    </div>
    <script src="/socket.io/socket.io.js"></script>
    <script src="js/1-admin/chat.js"></script>
</body>
</html>
