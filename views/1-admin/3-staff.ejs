            <div>
                <label for="adminName">Admin Name:</label>
                <input type="text" id="adminName" name="adminName" readonly>
            </div>
            <div>
                <label for="cys">CYS:</label>
                <input type="text" id="cys" name="cys" required>
            </div>
            <div>
                <label for="day">Day:</label>
                <input type="text" id="day" name="day" readonly>
            </div>
            <div>
                <label for="time">Time:</label>
                <input type="text" id="time" name="time" readonly>
            </div>
            <div>
                <label for="subject">Subject Code:</label>
                <input type="text" id="subject" name="subject" required>
            </div>
            <div>
                <label for="roomNum">Room Number:</label>
                <input type="text" id="roomNum" name="roomNum" required>
            </div>
            <button type="submit">Save</button>
        </form>
    </div>
