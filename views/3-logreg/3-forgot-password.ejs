<%- include('../partials/header-logreg.ejs') %>

<!-- Centering container -->
<div class="flex-1 flex items-center justify-center mb-[2vh]"> <!-- Replaces .login-container -->
  <!-- Login Box -->
  <!-- Adjusted width: wider on small screens (w-11/12 or w-[90vw]), narrower on medium+ screens (md:w-[45vw]) -->
  <div class="relative bg-white p-[4vh] pt-[2vh] w-[90vw] xl:w-[45vw] md:w-[50vw] min-h-[35vh] max-h-[80vh] h-auto rounded-[1.5vh] shadow-md text-center overflow-hidden">

    <!-- Back Button -->
    <span class="back-to-home block text-left mb-[0.5vh] relative top-0 left-0 cursor-pointer" onclick="goBack()"> <!-- Replaces .back-to-home -->
      <img src="/img/back.png" alt="Back to Previous Page" class="mt-[2vh] w-[3vh] h-auto"> <!-- Replaces .back-icon -->
    </span>

    <!-- Logo -->
    <a href="/">
      <img src="/img/GFMLogo.png" alt="Green FM Logo" class="mx-auto w-[10vh] h-auto cursor-pointer mb-4"> <!-- Centered logo, replaces .logo -->
    </a>

    <!-- Title -->
    <h2 class="text-[#00722A] font-bold text-[2.8vh] mb-[3vh]">Forgot Password</h2> <!-- Replaces .login-title -->

    <!-- Form -->
    <form class="forgot-password-form flex flex-col gap-[2.5vh] text-left"> <!-- Replaces .login-form styles -->
      <!-- Email Group -->
      <div class="form-group">
        <label for="email" class="text-[1.8vh] text-gray-800 font-bold mb-[0.8vh] block">Email</label>
        <input type="email" id="email" name="email" required
               class="w-full p-[1.5vh] border border-gray-300 rounded-[1vh] text-[2vh] text-gray-800 box-border focus:border-[#00722A] focus:outline-none">
        <div class="email-error text-red-500 text-xs mt-1"></div> <!-- Error message styling -->
      </div>

      <!-- Submit Button -->
      <button type="submit" class="bg-[#00722A] text-white p-[1.5vh] text-[2vh] font-bold border-none rounded-[1vh] cursor-pointer transition duration-300 ease-in-out hover:bg-[#00591d]">Submit</button> <!-- Replaces .login-button -->
    </form>

     <!-- Optional: Add a link back to login -->
     <div class="mt-[2vh] text-[2vh]">
         <a href="/LogIn" class="text-[#00722A] no-underline mx-[1.5vh] hover:underline">Back to Login</a>
     </div>

  </div>
</div>

<!-- Keep existing JS links -->
<script src="/js/3-logreg/forgot-password.js"></script>
</body>
</html>