<%- include('../partials/header-logreg.ejs') %>

<div class="login-container">
  <div class="login-box">
    
    <!-- Back to Previous Page Button inside the container -->
    <span class="back-to-home" onclick="goBack()">
      <img src="img/back.png" alt="Back to Previous Page" class="back-icon">
    </span>


    <a href="/">
      <img src="img/GFMLogo.png" alt="Green FM Logo" class="logo">
    </a>
    
    <h2 class="login-title">Green FM Login</h2>

    <form class="login-form">

      <div class="form-group">
        <label for="username">Username</label>
        <input type="text" id="username" name="username" required>
        <div class="username-error"></div>
      </div>

      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" id="password" name="password" required>
        <div class="password-error"></div>
      </div>

      <input type="hidden" name="redirect" value="<%= redirectUrl %>">
      <button type="submit" class="login-button">Log in</button>
    </form>

    <div class="footer-links">
      <a href="/LogIn/ForgotPassword">Forgot password?</a>
      <a href="/Register">Sign up for Green FM</a>
    </div>
  </div>
</div>

<script src="js/3-logreg/login.js"></script>
</body>

</html>
