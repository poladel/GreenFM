<%# filepath: /Users/polaredd/Desktop/GreenFM/views/error.ejs %>
<%- include('partials/header.ejs') %>

<div class="page-container flex flex-col min-h-screen">
    <%- include('partials/nav.ejs') %>
    <%- include('partials/menu.ejs') %>

    <div class="content-wrap flex-1 pt-5 pl-16 pr-4 lg:pl-[14vw]">
        <div class="max-w-6xl 2xl:max-w-screen-xl mx-auto p-6 bg-white rounded-lg shadow-md">
            <h1 class="text-3xl font-bold text-red-600 mb-4">Server Error</h1>
            <p class="text-lg text-gray-700 mb-4"><%= message || 'An unexpected error occurred.' %></p>

            <% if (process.env.NODE_ENV === 'development' && error) { %>
                <div class="mt-6 p-4 bg-gray-100 rounded border border-gray-300">
                    <h2 class="text-xl font-semibold text-gray-800 mb-2">Error Details (Development Mode)</h2>
                    <pre class="text-sm text-gray-600 whitespace-pre-wrap break-words"><%= error.stack %></pre>
                </div>
            <% } %>

            <div class="mt-6">
                <a href="/" class="text-green-700 hover:text-green-900 font-semibold">&larr; Go back to Homepage</a>
            </div>
        </div>
    </div>

    <%- include('partials/footer.ejs') %>
</div>

</body>
</html>