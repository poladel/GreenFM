
<%- include('../partials/header.ejs') %>

    <div class="page-container">
        <div class="content-wrap">
            <div class="container">
                <%- include('../partials/nav.ejs') %>

                <!-------------------- HEADER MENUS -------------------->   
                <%- include('../partials/menu.ejs') %>

                <!-------------------- CONTENTS START --------------------> 
                <div class="post-container">
                    <form id="post-form" enctype="multipart/form-data">
                        <!-- New title input -->
                        <input type="text" id="post-title" name="title" placeholder="Enter post title..." required>

                        <!-- Content textarea -->
                        <textarea name="text" class="post-textbox" placeholder="Write something..." required></textarea>
    
                        <!-- Hidden file inputs -->
                        <input type="file" id="image-input" name="media" accept="image/*" multiple style="display: none;">
                        <input type="file" id="video-input" name="video" accept="video/*" style="display: none;">
    
                        <!-- Preview area -->
                        <div id="preview-container"></div>
    
                        <div class="post-options">
                            <button type="button" class="post-option-button" id="add-image-button">
                                <img src="../img/image.png" alt="Add Image" class="option-icon">
                            </button>
                            <button type="button" class="post-option-button" id="add-video-button">
                                <img src="../img/video.png" alt="Add Video" class="option-icon">
                            </button>
                            <button type="submit" class="post-button">Post</button>
                        </div>
                    </form>
                </div>
    
                <div id="posts-container">
                    <!-- Posts will be displayed here -->
                </div>

                <!-- Right Column (Live Now + Schedule) -->
                <div class="right-sidebar">
                    <!-- Live Now! -->
                    <div class="live-now-container">
                        <h3>Live Now!</h3>
                        <div id="live-now-content">
                            <!-- Dynamic content filled by JS -->
                        </div>
                        <a id="live-now-link" href="/live" class="go-live-button">GO TO LIVE</a>
                    </div>

                    <!-- Schedule -->
                    <div class="schedule-container">
                        <div class="schedule-header">
                            <h3>Today's Lives</h3>
                            <button id="edit-schedule-btn" class="edit-button">Edit</button>
                        </div>
                        <ul id="schedule-list"></ul>

                        <!-- Editable Form (hidden by default) -->
                        <form id="schedule-form" style="display: none;">
                            <% ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday'].forEach(day => { %>
                                <div class="schedule-day" data-day="<%= day %>">
                                    <label><%= day %></label>
                                    <div class="slots"></div>
                                    <button type="button" class="add-slot-btn">+ Add Slot</button>
                                </div>
                            <% }); %>
                            <button type="submit" class="save-schedule-button">Save</button>
                        </form>
                    </div>
                </div>

                <div id="media-modal" class="media-modal">
                    <span class="close-modal">&times;</span>
                    <div class="modal-content">
                        <button class="nav-arrow left-arrow">&#10094;</button>
                        <img id="modal-image" class="modal-media" style="display: none;">
                        <video id="modal-video" class="modal-media" controls style="display: none;"></video>
                        <button class="nav-arrow right-arrow">&#10095;</button>
                    </div>
                </div>
    
            </div>
        </div>

        <!-------------------- FOOTER -------------------->
        <%- include('../partials/footer.ejs') %>
        
        <script src="js/2-user/home.js"></script>

    </div>
</body>
</html>
