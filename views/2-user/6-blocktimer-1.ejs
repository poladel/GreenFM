<%- include('../partials/header.ejs') %>

<div class="page-container">
    <div class="content-wrap">
        <div class="container">
            <%- include('../partials/nav.ejs') %>

            <!-- HEADER -->
            <div class="form-title-container">
                <h3 class="form-title">BLOCKTIMER APPLICATION FORM</h3>
            </div>
            
            <!-- PROGRESS BAR -->
            <div class="progress-bar">
                <div class="circle circle-1">1</div>
                <div class="circle circle-2">2</div>
                <div class="circle circle-3">3</div>
            </div>                                            

            <form id="blocktimerForm1">
                <!-- FORMS START -->
                <div class="forms-container">
                    <div class="form-container1">
                        <label>Type of Office/Organization</label>
                        <div class="radio-group">
                            <div class="radio-item">
                                <label><input type="radio" name="organizationType" value="Administration" required> Administration</label>
                            </div>
                            <div class="radio-item">
                                <label><input type="radio" name="organizationType" value="Student Government"> Student Government</label>
                            </div>
                            <div class="radio-item">
                                <label><input type="radio" name="organizationType" value="Department"> Department</label>
                            </div>
                            <div class="radio-item">
                                <label><input type="radio" name="organizationType" value="Program Council"> Program Council</label>
                            </div>
                            <div class="radio-item">
                                <label><input type="radio" name="organizationType" value="Faculty"> Faculty</label>
                            </div>
                            <div class="radio-item">
                                <label><input type="radio" name="organizationType" value="Interest Organization"> Interest Organization</label>
                            </div>
                        </div>                                                       
                        
                        <br>
                        <label>Name of Office/Organization</label>
                        <p class="formnote">Note: Please include abbreviated name</p>
                        <input type="text" name="organizationName" placeholder="Ex. Communication Program Council (CPC)" required>
                        
                        <br>
                        <label>Proponent's Name</label>
                        <div class="name-section">
                            <input type="text" name="proponent.lastName" placeholder="Last Name" required>
                            <input type="text" name="proponent.firstName" placeholder="First Name" required>
                            <input type="text" name="proponent.mi" class="middleinitial" placeholder="M.I.">
                            <input type="text" name="proponent.cys" placeholder="CYS">
                        </div>

                        <br>
                        <label>Co-Proponent's Name</label>
                        <p class="formnote">If no co-proponent, check "N/A"</p>
                        <div class="name-section">
                            <input type="text" id="coProponentLastName" name="coProponent.lastName" placeholder="Last Name">
                            <input type="text" id="coProponentFirstName" name="coProponent.firstName" placeholder="First Name">
                            <input type="text" id="coProponentMi" name="coProponent.mi" class="middleinitial" placeholder="M.I.">
                            <input type="text" id="coProponentCYS" name="coProponent.cys" placeholder="CYS">
                        </div>
                        <div class="checkbox-group">
                            <p><input type="checkbox" id="coProponentNotApplicable" name="coProponent.notApplicable"> Not Applicable</p>
                        </div>
                    </div>
                </div>

                <!-- Contact Information -->
                <div class="form-container4">
                    <label>DLSU-D Email of Office/Organization</label>
                    <input type="text" id="dlsud-email-office" name="contactInfo.dlsudEmail" placeholder="@dlsud.edu.ph" required>

                    <br>
                    <label>Contact Person's DLSU-D Email</label>
                    <input type="text" id="dlsud-email-contact" name="contactInfo.contactEmail" placeholder="@dlsud.edu.ph" required>

                    <br>
                    <label>Contact Person's Facebook Link</label>
                    <input type="text" name="contactInfo.contactFbLink" placeholder="https://www.facebook.com/959GreenFm" required>

                    <label>Allow automatic crossposting to your office/organization's Facebook page?</label>
                    <div class="radio-group">
                        <label class="radio-item"><input type="radio" name="contactInfo.crossposting" value="Yes" required> Yes</label>
                        <label class="radio-item"><input type="radio" name="contactInfo.crossposting" value="No"> No</label>
                    </div>

                    <div id="fb-link-container" style="display: none;">
                        <label>Facebook Crossposting Link</label>
                        <input type="text" name="contactInfo.fbLink">
                    </div>

                    <label>Signature of Proponent</label><br>
                    <div id="signature-upload-container">
                        <input type="file" id="signature-upload" name="proponentSignature" accept=".jpg, .jpeg, .png" required>
                        <p class="formnote">Upload your signature in JPG or PNG format.</p>
                    </div>
                    <div id="signature-preview" style="display: none;">
                        <p>Preview:</p>
                        <img id="signature-image" src="" alt="Signature Preview" style="max-width: 200px; max-height: 100px;">
                    </div>
                </div>

                <!-- Submit Button -->
                <div class="submit-button">
                    <button type="submit" class="submit">NEXT</button>
                </div>
            </form>

            <!-- FOOTER -->
            <%- include('../partials/footer.ejs') %>
        </div>
    </div>
</div>

<script src="js/2-user/blocktimer.js"></script>
<script src="js/3-logreg/auth.js" defer></script>   