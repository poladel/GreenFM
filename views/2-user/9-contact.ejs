            <!-- Contact Info Section -->
        <div class="contact-container">
            <div class="contact-info">
                <h2>Get in Touch</h2>
                <p>Any tips, inquiries, comments or suggestions that you have in mind? Email us at <strong>dlsudgreenfm@dlsud.edu.ph</strong>, or fill out the necessary information below.</p>
                <div class="info-item">
                    <div class="icon">📍</div>
                    <p>Address<br>De La Salle University, JFH Building, Dasmariñas, Cavite</p>
                </div>
                <div class="info-item">
                    <div class="icon">📞</div>
                    <p>Phone Number<br>09123456789</p>
                </div>
                <div class="info-item">
                    <div class="icon">✉️</div>
                    <p>E-Mail<br>dlsudgreenfm@dlsud.edu.ph</p>
                </div>
            </div>
            
            <!-- Contact Form Section -->
            <div class="contact-form">
                <h2>Send a Message</h2>
                <form>
                    <label for="name">Name</label>
                    <input type="text" id="name" name="name" 
                    value="<%= user ? `${user.firstName || ''} ${user.middleInitial || ''} ${user.lastName || ''}`.trim() : '' %>" 
                    required>

                    
                    <label for="email">E-mail</label>
                    <input type="text" id="name" name="name" value="<%= user && user.email ? user.email : '' %>" required>
                    
                    <label for="message">Message</label>
                    <textarea id="message" rows="4" name="message" placeholder="Write something..."></textarea>
                        
                    <button type="submit">Submit</button>
                </form>
            </div>
        </div>
            
