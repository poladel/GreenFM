<%- include('../partials/header.ejs') %>

<div class="page-container flex flex-col min-h-screen bg-gray-100"> <!-- Base background -->
    <!-- Include nav (fixed position) -->
    <%- include('../partials/nav.ejs') %>

    <!-- Include menu (sticky, takes headerTitle) -->
    <%- include('../partials/menu.ejs', { headerTitle: "BLOCKTIMER APPLICATION FORM" }) %>

    <!-- Main Content Area Wrapper -->
    <!-- Uses standard padding like 1-accounts.ejs -->
    <div class="content-wrap flex-1 pt-5 pl-16 pr-4 lg:pl-[14vw]">
        <div class="max-w-6xl 2xl:max-w-screen-xl mx-auto">

            <!-- PROGRESS BAR -->
            <!-- Added mt to account for fixed header, adjust ml/mb as needed -->
            <div class="progress-bar step-3-active flex justify-center my-5 mt-[calc(50px+4vh)] ml-[4.5vw] mb-0 relative">
                <!-- Step 1 Inactive -->
                <div class="circle inactive flex justify-center items-center w-[8vh] h-[8vh] rounded-full bg-[#74B88D] text-white font-bold mx-[50px] text-[25px] relative">1</div>
                <!-- Step 2 Inactive -->
                <div class="circle inactive flex justify-center items-center w-[8vh] h-[8vh] rounded-full bg-[#74B88D] text-white font-bold mx-[50px] text-[25px] relative">2</div>
                <!-- Step 3 Active -->
                <div class="circle active flex justify-center items-center w-[8vh] h-[8vh] rounded-full bg-[#00722A] text-white font-bold mx-[50px] text-[25px] relative">3</div>
                 <!-- CSS in input.css handles the lines based on step-3-active -->
            </div>

            <!-- Status Container -->
            <!-- Added padding-top to account for fixed header -->
            <div class="status-container mt-[calc(50px+4vh)] mx-auto mb-[4vh] w-full lg:w-[84vw] max-w-[900px] min-h-[250px] flex justify-center items-center flex-col text-base text-gray-800 text-center bg-white p-6 rounded-lg shadow-md">
                <div id="status-container" class="w-full">
                    <!-- Status will be loaded here by JS -->
                    <p class="animate-blink text-[1.2rem] text-gray-600 m-0 p-2.5">Loading application status...</p> <!-- Base styles + animation -->
                </div>
            </div>
            <!-------------------- CONTENTS END -------------------->

        </div> <!-- End container -->
    </div> <!-- End content-wrap -->

    <!-------------------- FOOTER -------------------->
    <%- include('../partials/footer.ejs') %>

</div> <!-- End page-container -->

<!-- Keep JS links -->
<script src="/js/2-user/blocktimer3.js"></script>
<script src="/js/3-logreg/auth.js" defer></script>

<!-- Add inline style for custom keyframes or ensure it's in your main CSS -->
<style>
  @keyframes blink {
    0% { opacity: 1; }
    50% { opacity: 0.4; }
    100% { opacity: 1; }
  }
  .animate-blink {
    animation: blink 1.5s infinite;
  }
  /* Basic button styling for status page - can be refined */
  #status-container button {
      background-color: #00722A; /* Green */
      color: white;
      padding: 0.5rem 1rem;
      border: none;
      border-radius: 0.375rem; /* rounded-md */
      cursor: pointer;
      margin: 0.5rem 0.25rem;
      font-size: 0.875rem; /* text-sm */
      transition: background-color 0.2s;
  }
   #status-container button:hover {
      background-color: #00591d; /* Darker green */
  }
   #status-container button.reject-change-btn {
       background-color: #dc2626; /* Red-600 */
   }
   #status-container button.reject-change-btn:hover {
       background-color: #b91c1c; /* Red-700 */
   }
    #status-container button:disabled {
      background-color: #9ca3af; /* Gray-400 */
      cursor: not-allowed;
   }

</style>

</body>
</html>