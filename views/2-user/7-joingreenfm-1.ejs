<%- include('../partials/header.ejs') %>

<div class="page-container">
  <div class="content-wrap">
    <div class="container">
      <%- include('../partials/nav.ejs') %>
                
      <!-------------------- CONTENTS START -------------------->
      <div class="form-title-container">
        <h3 class="form-title">JOIN GREEN FM</h3>
      </div>
      <div class="form-questions-container">
        <form id="joingreenfmForm">
          <label>Full Name</label>

          <!-------------------- 1 - Student Information -------------------->
          <div class="name-section">
            <input type="text" name="last-name" placeholder="Last Name" required>
            <input type="text" name="first-name" placeholder="First Name" required>
            <input type="text" name="mi" placeholder="M.I">
          </div>

          <label>Student Number</label>
          <input type="text" maxlength="9" name="student-number" required>

          <label>DLSU-D Email</label>
          <input type="email" name="dlsud-email" placeholder="@dlsud.edu.ph" required>

          <!-- College Selection -->
          <label>College</label>
          <div class="radio-group">
            <label><input type="radio" name="college" value="CLAC" required> CLAC - College of Liberal Arts and Communication</label>
            <label><input type="radio" name="college" value="CBAA"> CBAA - College of Business Administration and Accountancy</label>
            <!-- other colleges here -->
          </div>

          <label>Program</label>
          <select name="program" required>
            <option value="" disabled selected>Select your program</option>
            <optgroup label="CLAC">
              <option value="Communication">Communication</option>
              <!-- other programs here -->
            </optgroup>
          </select>

          <!-- College Year Selection -->
          <label>College Year</label>
          <div class="radio-group">
            <label><input type="radio" name="college-year" value="1st Year" required> 1st Year</label>
            <!-- other years here -->
          </div>

          <!-- Section, Facebook, Organizations -->
          <label>Section</label>
          <input type="text" name="section" placeholder="ABC123" required>                  

          <label>Facebook Profile URL</label>
          <input type="text" name="facebook-url" placeholder="https://www.facebook.com/959GreenFm" required>

          <label>Affiliated Organizations</label>
          <textarea name="affiliated-orgs-list" rows="4" cols="50" placeholder="List down the organizations you belong to." required></textarea>

          <!-------------------- 2 - DEPARTMENT PREFERENCE -------------------->

          <label>Preferred Department</label>
          <div class="radio-group">
            <label><input type="radio" name="preferred-department" value="News and Public Affairs" required> News and Public Affairs</label>
            <!-- other departments here -->
          </div>

          <label>Reasons for Staff Application</label>
          <textarea name="staff-application-reasons" rows="4" cols="50" placeholder="Why did you apply for Green FM?" required></textarea>

          <label>Reasons for Department Application</label>
          <textarea name="department-application-reasons" rows="4" cols="50" placeholder="Why did you apply for your chosen department?" required></textarea>

          <label>Green FM Contribution</label>
          <textarea name="greenfm-contribution" rows="4" cols="50" placeholder="What can you contribute to Green FM?" required></textarea>

          <!-- Submit button -->
          <br><br>
          <button type="submit">Next</button>
        </form>
      </div>
    </div>
  </div>

  <!-------------------- FOOTER -------------------->
  <%- include('../partials/footer.ejs') %>
</div>

<script src="js/2-user-js/joingreenfm.js"></script>
</body>
</html>
